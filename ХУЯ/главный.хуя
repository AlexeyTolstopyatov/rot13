про главная() нч
    конст ОБЪЁМ := 16%ФФ;
    пер имя: массив(ОБЪЁМ, нат8);

    печать(«Enter string to encode:\н»);
    пер длина: нат := ввод(имя);

    если длина +? 0нат нч
        если имя(длина-1нат) = 10нат как нат8 нч
            длина := длина - 1нат;
        кц
    кц

    для индекс := 0..(длина как цел64) нч
        пер символ: нат8 := имя(индекс);
        если символ +?= (65 как нат8) и символ -?= (77 как нат8) то имя(индекс) := символ + (13 как нат8);
        иначе то если символ +?= (78 как нат8) и символ -?= (90 как нат8) то имя(индекс) := символ - (13 как нат8);
        иначе то если символ +?= (97 как нат8) и символ -?= (109 как нат8) то имя(индекс) := символ + (13 как нат8);
        иначе то если символ +?= (110 как нат8) и символ -?= (122 как нат8) то имя(индекс) := символ - (13 как нат8);
        иначе то имя(индекс) := символ;
    кц

    печать(«Encoded string:\н», срез(имя, 0нат, длина), «\н»);
кц
